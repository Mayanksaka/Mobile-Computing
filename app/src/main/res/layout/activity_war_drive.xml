<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".war_drive">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WARDRIVE"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    android:padding="20dp"
                    android:textSize="40dp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/location_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Enter Name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintWidth_percent="0.8"
                    tools:ignore="TouchTargetSizeCheck" />
                <EditText
                    android:id="@+id/location_room_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Enter Room Number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/location_name"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintWidth_percent="0.8"
                    tools:ignore="TouchTargetSizeCheck" />


                <Button
                    android:id="@+id/button_add_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add Place"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/location_room_number"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintWidth_percent="0.8"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/button_find_my_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Find my location"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_add_place"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintWidth_percent="0.8"
                    android:layout_marginBottom="20dp" />


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button_find_my_location"
                        app:layout_constraintVertical_bias="0"
                        app:layout_constraintWidth_percent="0.95"
                        app:layout_constraintHeight_percent="0.5"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/textview_bouders"/>
                <Button
                    android:id="@+id/button_delete_database"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Delete Database"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerview"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintWidth_percent="0.8"
                    android:layout_marginBottom="20dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>